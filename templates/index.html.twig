{% extends 'base.html.twig' %}

{% block title %}
	Practical Test
{% endblock %}

{% block stylesheets %}
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
{% endblock %}

{% block body %}

	<div class="row p-4 ">
		<div class="col-md-3 border rounded p-4">
			<h3 class="border-bottom pb-1 mb-4">Products</h3>
			<ul class="ps-0">
				{% for product in products  %}
					<li class="d-flex mt-3 align-items-center">
						<h5>{{ product.name }}</h5>
						<h5 class="ms-2">({{ product.price }})€</h5>
						<button class="btn btn-primary ms-auto">Add To Cart</button>
					</li>
				{% endfor  %}
			</ul>
		</div>
		<div class="col-md-5 border rounded ms-3 p-4">
			<h3 class="border-bottom pb-1 mb-4">Voucher</h3>
			<ul class="ps-0">
				{% for voucher in vouchers  %}
					<li class="d-flex mt-3 align-items-center">
						<div class="d-flex flex-column">
							<h5>{{ voucher.name }}</h5>
							<span class="small">({{ voucher.description }})€</span>
						</div>
						<button class="btn btn-primary ms-auto">Apply</button>
					</li>
				{% endfor  %}
			</ul>
		</div>
		<div class="col-md-6"></div>
	</div>

{% endblock %}

{% block javascripts %}
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous" defer></script>
{% endblock %}
